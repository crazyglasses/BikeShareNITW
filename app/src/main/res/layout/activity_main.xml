<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.crazyglaasses.anmolkulkarni.uberforcycle.MainActivity"
    android:background="#ff5b8853"
    android:id="@+id/profileid">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="BikeShare"
        android:id="@+id/textView7"
        android:layout_x="115dp"
        android:layout_y="38dp"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:id="@+id/imageButton"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:src="@drawable/im"
        android:layout_toLeftOf="@+id/textView7"
        android:layout_toStartOf="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Full Name"
        android:id="@+id/fullname"
        android:layout_alignTop="@+id/imageButton"
        android:gravity="center_vertical|center_horizontal"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#00858884" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Amount"
        android:id="@+id/bamount"
        android:layout_below="@+id/fullname"
        android:layout_alignRight="@+id/fullname"
        android:layout_alignEnd="@+id/fullname"
        android:background="#009e8c52" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Balance:"
        android:id="@+id/textView9"
        android:layout_below="@+id/fullname"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_toLeftOf="@+id/bamount"
        android:layout_toStartOf="@+id/bamount"
        android:gravity="center_horizontal"
        android:autoText="false"

        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:id="@+id/imageButton2"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:id="@+id/imageButton3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/imageButton2"
        android:layout_alignEnd="@+id/imageButton2"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
